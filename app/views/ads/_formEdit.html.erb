<div class="col-xs-12 text-center">
  <%= form_for @ad do |f| %>
  <div class="col-xs-12 text-center">
    <% if @ad.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@ad.errors.count, "error") %> prohibited
          this ad from being saved:
        </h2>
        <ul>
          <% @ad.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="col-xs-12">
    <p>
      <%= f.label :budget %><br>
      <%= f.number_field( :budget,  min: 1.0, step: 0.01, lang:"nb",
          pattern:"[0-9]+([\.,][0-9]+)?")%>
    </p>
    <p>
      <%= f.submit %>
    </p>
  </div>
  <% end %>
</div>